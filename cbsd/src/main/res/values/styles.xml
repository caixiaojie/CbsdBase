<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="DropDownMenuStyle">@style/DropDownMenu</item>
    </style>


    <!-- 浮动窗口动画 -->
    <style name="anim_float_view">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <!-- 加载中对话框样式 -->
    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- my loading dialog -->
    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <style name="MultipleStatusView"/>
    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DropDownMenu">
        <item name="ddm_dividerColor">@color/bar_grey_90</item>
        <item name="ddm_dividerWidth">@dimen/default_ddm_divider_width</item>
        <item name="ddm_dividerMargin">@dimen/default_ddm_divider_margin</item>
        <item name="ddm_underlineColor">#E3E6EA</item>
        <item name="ddm_underlineHeight">@dimen/default_ddm_underline_height</item>
        <item name="ddm_maskColor">@color/default_ddm_mask_color</item>
        <item name="ddm_menuTextSize">@dimen/default_ddm_menu_text_size</item>
        <item name="ddm_menuTextPaddingHorizontal">@dimen/default_ddm_menu_text_padding_horizontal</item>
        <item name="ddm_menuTextPaddingVertical">@dimen/default_ddm_menu_text_padding_vertical</item>
        <item name="ddm_menuTextSelectedColor">?attr/colorAccent</item>
        <item name="ddm_menuTextUnselectedColor">#6A798E</item>
        <item name="ddm_menuSelectedIcon">@drawable/ddm_ic_arrow_up</item>
        <item name="ddm_menuUnselectedIcon">@drawable/ddm_ic_arrow_down</item>
        <item name="ddm_menuBackgroundColor">@color/xui_config_color_white</item>
        <item name="ddm_menuHeightPercent">0.5</item>
    </style>

</resources>
