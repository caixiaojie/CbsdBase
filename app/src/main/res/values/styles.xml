<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="user_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_input_txt</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="common_edit_txt_gray">
        <item name="android:textColor">#b3bacc</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_txt_small_blod">
        <item name="android:textColor">@color/color_txt_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_txt_small_gray">
        <item name="android:textColor">#aeaeae</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="common_txt_bold">
        <item name="android:textColor">@color/color_input_txt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
