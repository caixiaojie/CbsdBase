<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.yjhs.cbsdbase.view.widget.PieView
                android:id="@+id/pieView"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

        <com.yjhs.cbsdbase.view.widget.PrettyImageView
                android:id="@+id/pretty_image_round"
                app:border_color="@color/color_main"
                app:border_width="0dp"
                app:show_border="false"
                app:circle_dot_color="@color/black"
                app:circle_dot_radius="@dimen/dist_2"
                app:left_bottom_radiusX="@dimen/dist_10"
                app:left_bottom_radiusY="@dimen/dist_10"
                app:left_top_radiusX="@dimen/dist_10"
                app:left_top_radiusY="@dimen/dist_10"
                app:right_bottom_radiusX="@dimen/dist_10"
                app:right_bottom_radiusY="@dimen/dist_10"
                app:right_top_radiusX="@dimen/dist_10"
                app:right_top_radiusY="@dimen/dist_10"
                app:shape_type="SHAPE_ROUND"
                app:show_circle_dot="false"
                android:src="@mipmap/_2"
                android:layout_gravity="center"
                android:layout_width="@dimen/dist_200"
                android:layout_height="@dimen/dist_200"/>

        <com.yjhs.cbsdbase.view.widget.PrettyImageView
                android:id="@+id/pretty_image_circle"
                app:border_color="@color/color_main"
                app:border_width="0dp"
                app:show_border="false"
                app:circle_dot_color="@color/red"
                app:circle_dot_radius="@dimen/dist_4"
                app:shape_type="SHAPE_CIRCLE"
                app:show_circle_dot="true"
                android:src="@mipmap/_3"
                android:layout_gravity="center"
                android:layout_width="@dimen/dist_200"
                android:layout_height="@dimen/dist_200"/>

        <com.yjhs.cbsdbase.view.widget.CheckView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.yjhs.cbsdbase.view.widget.ArcSeekBar
                android:id="@+id/arc_seek_bar"
                android:layout_gravity="center"
                app:arc_colors="@array/arc_colors_default"
                app:arc_max="100"
                app:arc_open_angle="90"
                app:arc_progress="0"
                app:arc_rotate_angle="90"
                app:arc_thumb_color="#fff"
                app:arc_thumb_mode="STROKE"
                app:arc_thumb_radius="16dp"
                app:arc_thumb_width="3dp"
                app:arc_thumb_shadow_radius="3dp"
                app:arc_thumb_shadow_color="#000000"
                app:arc_width="40dp"
                android:layout_width="@dimen/dist_280"
                android:layout_height="@dimen/dist_280"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>