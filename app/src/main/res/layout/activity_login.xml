<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/white">


    <ImageView
            android:visibility="visible"
            android:scaleType="fitXY"
            android:src="@mipmap/cyx_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="170dp"
            android:id="@+id/ll_center"
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--账号-->
        <LinearLayout
                android:focusable="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@mipmap/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText
                    android:id="@+id/et_account"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:hint="帐号"
                    android:imeOptions="actionNext"
                    android:layout_marginLeft="10dp"
                    style="@style/user_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
                android:background="@color/color_line"
                android:layout_marginTop="8dp"
                android:layout_width="275dp"
                android:layout_height="1px"></LinearLayout>

        <!--密码-->
        <LinearLayout
                android:layout_marginTop="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@mipmap/img_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <EditText
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:id="@+id/et_pwd"
                    android:hint="密码"
                    android:layout_marginLeft="10dp"
                    style="@style/user_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
                android:background="@color/color_line"
                android:layout_marginTop="8dp"
                android:layout_width="275dp"
                android:layout_height="1px"></LinearLayout>

        <!--登录-->

        <LinearLayout
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/ll_login"
                android:layout_marginTop="50dp"
                android:layout_width="287dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/mainColor"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="登录"
                    android:id="@+id/txt_login"
            />
        </LinearLayout>




        <!--忘记密码 注册-->
        <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="5dp"
                    android:id="@+id/txt_forgot_pwd"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_black"
                    android:text="忘记密码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>
            <TextView
                    android:padding="5dp"
                    android:text="注册"
                    android:textColor="#00a8ff"
                    android:textSize="14sp"
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>


    <!--用户协议-->
    <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/ll_user_deal"
            android:gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="登录即代表阅读并同意"
                android:textSize="12sp"
                android:textColor="#b3bacc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:text="用户协议"
                android:id="@+id/user_deal"
                android:textSize="12sp"
                android:textColor="#00a8ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>


</FrameLayout>
