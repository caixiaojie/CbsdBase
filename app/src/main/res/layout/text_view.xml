<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--
    android:background="@color/white"
    -->
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/ll_item"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/common_txt_bold"
                android:id="@+id/txt_title"
                android:text=""
                android:lineSpacingExtra="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_dot"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/shape_txt_tongzhi"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_width="7dp"
                android:layout_height="7dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:visibility="gone"
                android:id="@+id/txt_type"
                android:text="降价促销"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/select_txt_publicity"
                android:layout_width="50dp"
                android:layout_height="15dp" />
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/fl_bg"
                android:layout_marginRight="10dp"
                android:background="@mipmap/pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="平台"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <TextView
                android:text="去分享"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/txt_go_share"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:background="@drawable/shape_txt_share"
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_marginStart="@dimen/dp_10"
                android:id="@+id/txt_sharenum"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="10sp"
                style="@style/common_txt_small_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="@dimen/dp_10"
                android:id="@+id/txt_scan"
                android:text=""
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/common_txt_small_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:visibility="gone"
                android:id="@+id/txt_time"
                android:text="2018-4-11"
                style="@style/common_txt_small_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>