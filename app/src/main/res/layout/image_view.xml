<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_item"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/shape_img_bg"
                android:scaleType="fitXY"
                android:id="@+id/img_car"
                android:layout_width="125dp"
                android:layout_height="80dp" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_type"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="降价促销"
                android:background="@drawable/shape_txt_type"
                android:layout_width="50dp"
                android:layout_height="15dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:gravity="left"
                    style="@style/common_txt_bold"
                    android:id="@+id/txt_title"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_dot"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/shape_txt_tongzhi"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/fl_bg"
                    android:background="@mipmap/platform_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp">
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="平台"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <TextView
                    android:visibility="gone"
                    android:text="去分享"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:id="@+id/txt_go_share"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:background="@drawable/shape_txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <TextView
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:id="@+id/txt_sharenum"
                    android:text="有324个同行分享"
                    style="@style/common_txt_small_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:id="@+id/txt_scan"
                    android:text="324个浏览"
                    android:textSize="10sp"
                    style="@style/common_txt_small_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:visibility="gone"
                    android:singleLine="true"
                    android:id="@+id/txt_time"
                    android:text=""
                    style="@style/common_txt_small_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>